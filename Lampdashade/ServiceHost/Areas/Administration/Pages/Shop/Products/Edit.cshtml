@model ShopManagement.Application.Contracts.Product.EditProduct

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">         </button>
    <h4 class="modal-title">   ویرایش محصول: @Model.Name   </h4>
</div>
<form id="editForm" asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input name="Name" type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد</label>
                    <input type="text" name="Code" class="form-control" asp-for="Code">
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                    <select name="CategoryId" class="form-control" asp-for="CategoryId" asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                        <option value="0">گروه محصول</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">عکس</label>
                    <input id="Picture" name="Picture" type="file" class="form-control" asp-for="Picture">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input name="PictureAlt" type="text" class="form-control" asp-for="PictureAlt">
                </div>
            </div>
        </div>
        <div class=" row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان</label>
                    <input name="PictureTitle" type="text" class="form-control" asp-for="PictureTitle">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ShortDescription" class="control-label">توضیحات کوتاه</label>
                    <input name="ShortDescription" type="text" class="form-control" asp-for="ShortDescription">
                    <span asp-validation-for="ShortDescription" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea name="Description" class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input name="Slug" type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="KeyWords" class="control-label">کلمات کلیدی</label>
                    <input name="KeyWords" type="text" class="form-control" asp-for="KeyWords">
                    <span asp-validation-for="KeyWords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea name="MetaDescription" class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Categories" value="@Model.Categories" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>